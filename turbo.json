{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": ["**/.env.*local"],
  "pipeline": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**", ".next/**", "!.next/cache/**"]
    },
    "lint": {
      "dependsOn": ["^build"]
    },
    "test": {
      "cache": true,
      "inputs": ["**/*.ts", "**/*.tsx"],
      "dependsOn": ["^build"]
    },
    "check-types": {},
    "dev": {
      "cache": false,
      "persistent": false
    },
    "clean": {
      "cache": false
    },
    "e2e": {
      "cache": false,
      "persistent": true,
      "inputs": ["tests/**/*.ts"]
    }
  }
}
